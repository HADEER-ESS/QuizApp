<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_bg"
    android:layout_gravity="center_vertical|center_horizontal"
    android:orientation="vertical"
    android:padding="33dp"
    tools:context=".ResultScreenActivity">
    <TextView
        android:id="@+id/tv_winState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="33sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="7dp"
        tools:text="You Win"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="33sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginVertical="7dp"
        android:text="Your Scour is "/>

    <TextView
        android:id="@+id/tv_scoreCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="33sp"
        android:textStyle="bold"
        android:layout_marginVertical="7dp"
        tools:text="3 / 7" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom|end">
    <Button
        android:id="@+id/btn_finishButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:background="@color/Light_Blue"
        android:layout_marginVertical="31dp"
        android:textSize="23sp"
        android:textStyle="bold"
        tools:text="Try Again" />
    </LinearLayout>

</LinearLayout>